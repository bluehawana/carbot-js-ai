# Text-to-Speech Configuration
# TTS_PROVIDER options: edge (recommended, free), azure, polly, system
TTS_PROVIDER=edge

# Optional: Google Cloud Speech API (if you want Google ASR)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# AI Provider Configuration (choose one: openai, claude, grok, groq, together, etc.)
AI_PROVIDER=groq

# Recommended AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROK_API_KEY=your-grok-api-key
XAI_API_KEY=your-xai-api-key

# Free AI Services (alternatives)
GROQ_API_KEY=your-groq-api-key
TOGETHER_API_KEY=your-together-api-key
COHERE_API_KEY=your-cohere-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Local AI (no API key needed)
# Just install Ollama from https://ollama.ai

# Picovoice Access Key (for wake word detection) 
# Get your access key from https://console.picovoice.ai/
PICOVOICE_ACCESS_KEY=your-picovoice-access-key

# Server Configuration
PORT=3000
NODE_ENV=development

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16

# Wake Word Settings
WAKE_WORD_SENSITIVITY=0.5
WAKE_WORD_TIMEOUT=5000

# Social Media Integration (Optional)
# Get your Bearer Token from: https://developer.x.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your-twitter-bearer-token